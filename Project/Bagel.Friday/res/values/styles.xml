<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
   
    <!-- Start of custom themes for Bagel.Friday -->
    <style name="MyTheme" parent="android:Theme.Holo.Light">
    	<item name="android:windowActionBar">false</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:textColor">#00A5FF</item>
    </style>

     <style name="CustomFontStyle">
      	<item name="android:layout_width">fill_parent</item>
      	<item name="android:layout_height">wrap_content</item>
      	<item name="android:typeface">monospace</item>
      	<item name="android:textSize">8pt</item>
      	<item name="android:textColor">#00A5FF</item>
     </style>
     
     <style name="PaintStroke">
    	<item name="android:paddingLeft">4dp</item>
    	<item name="android:paddingBottom">4dp</item>
    	<item name="android:textColor">#00A5FF</item>
    	<item name="android:textSize">30sp</item>
    	<item name="android:shadowColor">#00A5FF</item>
    	<item name="android:shadowDx">1</item>
    	<item name="android:shadowDy">1</item>
    	<item name="android:shadowRadius">0.0001</item>
    </style>
   
     <!-- End of custom themes for Bagel.Friday -->
     
</resources>
